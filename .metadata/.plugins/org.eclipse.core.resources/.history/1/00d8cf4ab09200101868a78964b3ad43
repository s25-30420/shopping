package model;

public class ResvationDTO {
	 private String giftnim;
     private String custNo;
     private String pay;
     private String requests;
     
     public ResvationDTO() {
     }
   
     public ResvationDTO(String giftnim, String custNo, String pay, String requests) {
         
         if (pay.equals("toss")) {
        	 this.pay = "토스페이";
         }
         else if(pay.equals("kakao")) {
        	 this.pay = "카카오페이";
         }
         else if(pay.equals("kb")) {
        	 this.pay = "kbpay";
         }
         
         
         this.giftnim = giftnim;
         this.custNo = custNo;
         
         this.requests = requests;
     }
	public String getgiftnim() {
		return giftnim;
	}
	public void setgiftnim(String giftnim) {
		this.giftnim = giftnim;
	}
	public String getCustNo() {
		return custNo;
	}
	public void setCustNo(String custNo) {
		this.custNo = custNo;
	}
	public String getpay() {
		return pay;
	}
	public void setpay(String pay) {
		this.pay = pay;
	}
	public String getrequests() {
		return requests;
	}
	public void setCourtNo(String requests) {
		this.requests = requests;
	}
     
     
}